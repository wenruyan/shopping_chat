.scroll {
  height: 100%;
  width: 750rpx;
  float: left;
}
.list {
  width: 750rpx;
  background-color: #F9F9F9;
  overflow: hidden;
  min-height:100%;
}
.list-detail {
  width: 750rpx;
  overflow: hidden;
  padding: 61rpx 40rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.list-detail .left {
  text-align: left;
  font-size: 30rpx;
  color: #333333;
}
.list-detail .left .pic {
  width: 207rpx;
  height: 179rpx;
}
.list-detail .right {
  width: 433rpx;
  height: 179rpx;
  position: relative;
}
.list-detail .right .name {
  font-size: 26rpx;
  color: #333333;
  height:107rpx;
  width: 268rpx;
  overflow:hidden;
  text-overflow:ellipsis; 
  /* white-space:nowrap; */
  -webkit-box-orient:vertical;
  display:-webkit-box;
  -webkit-line-clamp:3;
}
.list-detail .right .status {
  font-size: 28rpx;
  font-weight: bold;
  color: #4189FF;
}
.list-detail .right .status.used {
  color: #FF790D;
}
.list-detail .right .pay-info {
  position: absolute;
  bottom: 5rpx;
  width: 100%;
  font-size: 26rpx;
  color: #999999;
  text-align: right;
}
.list-detail .right .pay-info text {
  color: #FF2B44;
  font-weight: bold;
  margin-left: 10rpx;
  font-weight: 28rpx;
}

.confirm-info {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  text-align: center;
}
.confirm-info .bg {
  width: 100%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #000000;
  opacity: 0.5;
  z-index: -1;
}
.confirm-info .content {
  width: 580rpx;
  height: 531rpx;
  background-color: #FFFFFF;
  border-radius: 25rpx;
  margin: 316rpx auto 128rpx;
  position: relative;
  color: #333333;
  text-align: center;
}
.confirm-info .content .text-title {
  font-size: 46rpx;
  padding-top: 66rpx;
  line-height: 1;
  font-weight: bold;
}
.confirm-info .content .text-content {
  font-size: 28rpx;
  padding: 60rpx 50rpx 0;
}
.confirm-info .content .text-content .input-wrap {
  /* height: 30rpx; */
  overflow: hidden;
  padding: 10rpx 0;
}
.confirm-info .content .text-content .label-input {
  font-weight: bold;
  width: 120rpx;
  text-align: left;
  float: left;
  display: block;
  height: 1.4rem;
  line-height: 1.4rem;
}
.confirm-info .content .text-content input {
  width: 310rpx;
  text-align: left;
  display: block;
  float: left;
  margin-left: 20rpx;
}
.confirm-info .content .btn {
  width: 378rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #FFFFFF;
  background: -webkit-linear-gradient(left, #FF654C, #FF7F44);
  background: linear-gradient(left, #FF654C, #FF7F44);
  font-size: 36rpx;
  box-shadow: 0 0 5rpx #0CA2FF;
  margin-top: 60rpx;
}
.confirm-info .close image{
  width: 62rpx;
  height: 62rpx;
}
