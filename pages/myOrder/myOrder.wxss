.container {
  background-color: #fff;
  height: 100%;
  overflow-y: hidden;
  z-index: 1;
  box-sizing: border-box;
  /* padding-top: 128rpx; */
}

.no-record {
  text-align: center;
}

.no-record .no-record-img {
  width: 414rpx;
  height: 298rpx;
  margin: 0 auto 80rpx;
  padding-top: 185rpx;
}

.no-record .no-record-text {
  font-weight: bold;
  font-size: 34rpx;
  color: #666;
}

.no-record .btn {
  font-size: 36rpx;
  color: #fff;
  margin-top: 37rpx;
  width: 333rpx;
}

.select-bar {
  width: 100%;
  padding:56rpx 0 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.select-bar .item {
  text-align: center;
  width: 25%;
  float: left;
  font-size: 30rpx;
  color: #666666;
  font-weight: bold;
  position: relative;
}
.select-bar .item.active {
  color: #333333;
}
.select-bar .item .line {
  width: 0;
  height: 4rpx;
  background-color: #FF2B44;
  margin: 0 auto;
  margin-top: 10rpx;
  transition: width 0.2s;
}
.select-bar .item.active .line {
  width: 130rpx;
}
.scroll-wrap {
  height: calc(100% - 130rpx);
  box-sizing: border-box;
  width: 1500rpx;
  position: relative;
  left: 0;
  transition: left 0.2s;
}
