/**index.wxss**/
.container {
  background-color: #ffffff;
  height: 100%;
  overflow-y: hidden;
  z-index: 1;
  box-sizing: border-box;
  padding: 36rpx 40rpx 0;
  color: #333333;
}

.title {
  font-size: 54rpx;
  font-weight: bold;
}

.tips {
  font-size: 26rpx;
  color: #666666;
  margin-top: 20rpx;
  margin-bottom: 130rpx;
}

.input-wrap {
  padding: 30rpx 0;
  font-size: 30rpx;
  position: relative;
}

.input-wrap:after {
  position: absolute;
  bottom: 0;
  content: '';
  width: 100%;
  height: 2rpx;
  background-color: #E6E6E6;
  transform: scaleY(0.5)
}

.btn-wrap {
  margin-top: 102rpx;
}

.btn-wrap .btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}

.resend {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #4189FF
}

.resend.gray {
  color: #999999;
}