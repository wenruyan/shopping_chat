.container {
  background-color: #ffffff;
  height: 100%;
  overflow-y: hidden;
  z-index: 1;
  box-sizing: border-box;
  padding-top: 128rpx;
  padding-bottom: 98rpx;
}

.menu {
  padding-left: 40rpx;
  padding-top: 30rpx;
}
.menu .menu-item {
  height: 98rpx;
  line-height: 98rpx;
  width: 710rpx;
  position: relative;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  padding-left: 33rpx;
  box-sizing: border-box;
}
.menu .menu-item::after {
  content: '';
  width: 710rpx;
  height: 2rpx;
  background-color: #F4F4F4;
  position: absolute;
  bottom: 0;
  left: 0;
}
/* .menu .menu-item:last-child::after {
  height: 0;
} */
.menu .menu-item .right-icon {
  position: absolute;
  top: 38rpx;
  right: 26rpx;
  width: 14rpx;
  height: 26rpx;
}
.btn-wrap {
  padding-bottom: 60rpx;
  margin-top:360rpx;
}
.btn-save {
  margin-top: 80rpx;
  font-size: 36rpx;
}
.btn-delete {
  margin-top:22rpx;
  font-size: 36rpx;
}

.confirm-tips {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  text-align: center;
}
.confirm-tips .bg {
  width: 100%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #000000;
  opacity: 0.5;
  z-index: -1;
}
.confirm-tips .content {
  width: 580rpx;
  padding-bottom: 74rpx; 
  background-color: #FFFFFF;
  border-radius: 25rpx;
  margin: 316rpx auto 125rpx;
  position: relative;
  color: #333333;
  text-align: center;
}
.confirm-tips .content .text-title {
  font-size: 46rpx;
  padding: 66rpx 0 50rpx;
  line-height: 1;
  font-weight: bold;
}
.confirm-tips .content .text-content {
  font-size: 30rpx;
  padding: 0 38rpx;
  line-height: 1.8;
  text-align: left;
  white-space:normal;
  word-break:break-all;
}
.confirm-tips .content .btn {
  width: 378rpx;
  margin-top: 65rpx;
}
.confirm-tips .close image{
  width: 62rpx;
  height: 62rpx;
}
