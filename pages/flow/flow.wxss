/**index.wxss**/
.container {
  background-color: #ffffff;
  height: 100%;
  overflow-y: hidden;
  z-index: 1;
  box-sizing: border-box;
  padding-top: 128rpx;
  padding-bottom: 98rpx;
  text-align: center;
}
.balance-detail {
  font-size: 30rpx;
  color: #666666;
  padding-top: 112rpx;
  box-sizing:border-box;
  padding-left:26rpx;
}
.balance-detail image{
  width: 12px;
  height: 20rpx;
}
.balance {
  font-size: 90rpx;
  color: #333333;
  margin-top: 30rpx;
  font-weight: bold;
  box-sizing:border-box;
  padding-right:20rpx;
}
.line {
  width: 650rpx;
  height: 2rpx;
  margin: 60rpx auto 0;
  background-color: #F4F4F4;
}

.input-wrap {
  /* height: 30rpx; */
  overflow: hidden;
  padding: 10rpx 50rpx;
  font-size: 30rpx;
  color: #333333;
  margin-top: 40rpx;
}
.input-wrap .label-input {
  font-weight: bold;
  width: 120rpx;
  text-align: left;
  float: left;
  display: block;
  height: 1.4rem;
  line-height: 1.4rem;
  margin-right: 20rpx;
}
.input-wrap input {
  width: 510rpx;
  text-align: right;
  display: block;
  float: left;
}
.select-wrap {
  width: 750rpx;
  box-sizing: border-box;
  padding: 45rpx 50rpx 0;
  overflow: hidden;
}
.select-wrap .select-item {
  width: 150rpx;
  height: 100rpx;
  line-height: 100rpx;
  border: 1px solid #bbb;
  color: #bbb;
  font-size: 36rpx;
  border-radius: 10rpx;
  margin-right: 12rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.select-wrap .select-item:last-child {
  margin-right: 0;
}
.select-wrap .select-item.checked {
  border-color: #FF7F44;
  color: #FF7F44;
}
.btn-wrap {
  margin-top: 140rpx;
  margin-bottom: 30rpx;
}
.btn-go {
  margin-top: 20rpx;
  border: 2rpx solid #FF3327;
}
.tips {
  font-size: 24rpx;
  color: #999999;
}
.confirm-tips {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  text-align: center;
}
.confirm-tips .bg {
  width: 100%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #000000;
  opacity: 0.5;
  z-index: -1;
}
.confirm-tips .content {
  width: 580rpx;
  padding-bottom: 74rpx; 
  background-color: #FFFFFF;
  border-radius: 25rpx;
  margin: 316rpx auto 125rpx;
  position: relative;
  color: #333333;
  text-align: center;
}
.confirm-tips .content .text-title {
  font-size: 46rpx;
  padding: 66rpx 0 50rpx;
  line-height: 1;
  font-weight: bold;
}
.confirm-tips .content .text-content {
  font-size: 30rpx;
  padding: 0 38rpx;
  line-height: 1.8;
  text-align: left;
  white-space:normal;
  word-break:break-all;
}
.confirm-tips .content .btn {
  width: 378rpx;
  margin-top: 65rpx;
}
.confirm-tips .close image{
  width: 62rpx;
  height: 62rpx;
}