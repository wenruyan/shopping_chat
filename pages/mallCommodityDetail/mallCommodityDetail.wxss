.icon {
  position: relative;
  z-index: 1;
  top: 10rpx;
}

.shareBtn {
  width: 100rpx;
  height: 100%;
  color: #666;
  font-size: 20rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 60rpx 0 20rpx;
  border-radius: 0;
  background-color: inherit;
  line-height: 1;
  box-sizing: border-box;
}

.needKonw {
  font-size: 24rpx;
  width: 624rpx;
  margin: 42rpx;
}

.noStock {
  font-size: 40rpx;
  color: #FF2B44;
  font-weight: bold;
  box-sizing: border-box;
  padding: 10rpx 38rpx 20rpx 38rpx;
}

.otherInfo {
  width: 674rpx;
  margin: 0 auto;
  font-size: 22rpx;
  color: #999999;
  height: 60rpx;
  line-height: 60rpx;
}

.select-attr {
  width: 674rpx;
  margin: 0 auto;
  font-size: 26rpx;
  color: #999999;
  border-top: 1rpx solid #E6E6E6;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.select-attr text{
  margin-left: 20rpx;
  color: #333333;
}

.select-attr image {
  width: 12rpx;
  height: 22rpx;
}

.goods-title {
  font-size: 34rpx;
  color: #333333;
  text-align: center;
  font-weight: bold;
  position: relative;
  margin-top:30rpx;
  padding-top: 20rpx;
}

.goods-title::before {
  content: '';
  width: 750rpx;
  height: 20rpx;
  background-color: #F9F9F9;
  position: absolute;
  top: -20rpx;
  left: 0;
  z-index: 2;
}
.bg {
  position:fixed;
  top: 0;
  bottom:0;
  left:0;
  right:0;
  background-color:#000000;
  z-index:8;
  opacity: 0.6;
}
.spec-panel {
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  background-color:#FFFFFF;
  z-index:9;
  border-radius: 20rpx 20rpx 0 0;
  box-sizing: border-box;
  padding: 40rpx 40rpx 44rpx;
}
.spec-panel .commodity {
  overflow: hidden;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #e6e6e6;
}
.spec-panel .commodity>image {
  width: 218rpx;
  height: 218rpx;
  border: 1rpx solid #EEEEEE;
  float: left;
}
.spec-panel .commodity>view {
  margin-left: 26rpx;
  width: 420rpx;
  height: 220rpx;
  float: left;
  box-sizing: border-box;
  padding: 30rpx 0;
}

.spec-panel .commodity>view .name {
  font-size: 26rpx;
  height:74rpx;
  overflow:hidden;
}

.spec-panel .commodity>view .price {
  margin-top: 20rpx;
}

.spec-panel .commodity>view .price image {
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 10rpx;
  margin-right: 8rpx;
}

.spec-panel .commodity>view .price text {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF2B44;
}
.spec-panel .commodity>view .price text:last-child {
  font-size: 20rpx;
  font-weight: normal;
  position: relative;
  top: 10rpx;
  margin-left: 7rpx;
}

.spec-panel .info-wrap {
  max-height: 487rpx;
  overflow-y: auto;
}

.spec-panel .info-wrap .number {
  font-size: 30rpx;
  margin-top: 35rpx;
  position: relative;
}

.spec-panel .info-wrap .number .selectNumber {
  position: absolute;
  right:10rpx;
  top:-10rpx;

}

.spec-panel .info-wrap .number .selectNumber>view {
  /* padding: 0;
  min-width:40rpx; */
}

.spec-panel .info-wrap .number .selectNumber>input {
  /* width: 40rpx;
  height: 30rpx; */
}

.spec-panel .btn {
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #FF2B44;
  margin-top: 50rpx;
}

.spec-panel .info-wrap .spec-item {
  border-bottom: 1px solid #E6E6E6;
  padding-top: 30rpx;
}

.spec-panel .info-wrap .spec-item .title {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 35rpx;
}

.spec-panel .info-wrap .spec-item .attr {
  overflow: hidden;
}

.spec-panel .info-wrap .spec-item .attr .attr-item {
  font-size: 24rpx;
  line-height: 1;
  color: #333333;
  background-color: #F6F6F6;
  border: 1px solid #F6F6F6;
  box-sizing: border-box;
  padding: 18rpx 28rpx;
  border-radius: 30rpx;
  float: left;
  margin-right: 36rpx;
  margin-bottom: 20rpx;
}

.spec-panel .info-wrap .spec-item .attr .attr-item.choosed {
  background-color: #FFEFF1;
  border: 1px solid #FF2B44;
  color: #FF2B44;
}