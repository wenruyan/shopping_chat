/**index.wxss**/

.container {
  background-color: #fff;
  height: 100%;
  overflow-y: hidden;
  z-index: 1;
  box-sizing: border-box;
  /* padding-top: 128rpx; */
}

.content-wrap {
  height: 100%;
  width: 750rpx;
  overflow-x: hidden;
  overflow-y: auto;
}

.picture-swiper {
  width: 750rpx;
  height: 650rpx;
  position: relative;
}

.picture-swiper swiper {
  height: 100%;
}

.picture-swiper .slide-image {
  width: 750rpx;
  height: 650rpx;
}

.picture-swiper .swiper-dot {
  position: absolute;
  bottom: 34rpx;
  right: 60rpx;
  width: 110rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #000;
  color: #fff;
  opacity: 0.2;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.commodity-name {
  box-sizing: border-box;
  padding: 50rpx 39rpx 0;
}

.pay-type {
  width: 101rpx;
  font-size: 20rpx;
  color: #fff;
  height: 26rpx;
  line-height: 26rpx;
  padding: 0 5rpx;
  background-color: #ff7b33;
  border-radius: 13rpx;
  float: left;
  margin-top: 15rpx;
  text-align:center;

}

.pay-type2 {
  font-size: 20rpx;
  color: RGBA(240, 37, 15, 1);
  height: 26rpx;
  line-height: 26rpx;
  padding: 0 5rpx;
  background-color: RGBA(240, 218, 216, 1);
  border-radius: 13rpx;
  float: left;
  margin-top: 15rpx;
  margin-right: 30rpx;
}

.commodity-name .name {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.5;
}

.pay-wrap {
  padding: 50rpx 39rpx 0;
}

.pay-wrap .soccer-money {
  overflow: hidden;
  margin-bottom: 20rpx;
}

.pay-wrap .soccer-money .now {
  font-size: 36rpx;
  color: #f0250f;
  font-weight: bold;
}

.pay-wrap .soccer-money .old {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  text-decoration: line-through;
}

.soccer {
  overflow: hidden;
}

.soccer .name {
  height: 59rpx;
  line-height: 59rpx;
  background-color: #f0250f;
  padding: 0 36rpx;
  font-size: 26rpx;
  color: #fff;
  border-bottom-left-radius: 3rpx;
  border-top-left-radius: 3rpx;
}

.soccer .need-soccer {
  height: 55rpx;
  line-height: 55rpx;
  padding: 0 36rpx;
  font-size: 26rpx;
  color: #f0250f;
  border: 2rpx solid #f0250f;
  border-bottom-right-radius: 3rpx;
  border-top-right-radius: 3rpx;
}

.select-bar {
  width: 100%;
  padding: 60rpx 0 30rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.select-bar .item {
  text-align: center;
  width: 50%;
  float: left;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.select-bar .item.active {
  color: #ff654c;
}

.select-bar .item .line {
  width: 0;
  height: 4rpx;
  background-color: #ff654c;
  margin: 0 auto;
  margin-top: 20rpx;
  transition: width 0.2s;
}

.select-bar .item.active .line {
  width: 130rpx;
}

.scroll-wrap {
  height: calc(100% - 130rpx);
  box-sizing: border-box;
  width: 1500rpx;
  position: relative;
  left: 0;
  transition: left 0.2s;
}

.scroll-wrap.virtual-show {
  left: -750rpx;
}

.scroll {
  /* height: 100%; */
  width: 750rpx;
  float: left;
  padding-bottom: 100rpx;
  padding-top: 20rpx;
}

.scroll.iphoneX-height {
  padding-bottom: 160rpx;
}

.scroll .detail-pic {
  width: 100%l;
}

.scroll .detail-pic .pic {
  display: block;
  width: 750rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 2;
  overflow: hidden;
  background-color: #fff;
}

.bottom.iphoneX-height {
  padding-bottom: 60rpx;
}

.bottom .share, .bottom .contact, .bottom .collection {
  width: 100rpx;
  height: 100%;
  color: #333;
  font-size: 20rpx;
  text-align: center;
  position: relative;
  background-color: #fff;
}

.bottom .share image, .bottom .contact image {
  width: 31rpx;
  height: 31rpx;
  margin: 29rpx auto 0;
  display: block;
}

.bottom .share view, .bottom .contact view {
  font-size: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.bottom .buy {
  width: 450rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  padding-top: 6rpx;
}
.bottom .buy view{
  width: 420rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  background-color: #FF2B44;
  border-radius: 10rpx;
  margin-left: 15rpx;
}

.bottom .buy view.gray {
  background-color: #ffaab4
}
