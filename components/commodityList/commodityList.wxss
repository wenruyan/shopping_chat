/* components/login/login.wxss */

.list {
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  padding-left: 40rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
}

.iconjifen {
  width: 24rpx;
  height: 24rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.f-l {
  float: left;
}

.f-r {
  float: right;
}

.list .list-item {
  width: 324rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 22rpx;
  margin-bottom: 18rpx;
}

.list .list-item .pic {
  width: 100%;
  height: 295rpx;
}

.commodity {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  line-height: 1.5;
  max-height: 80rpx;
  overflow: hidden;
}

.commodity .pay-type {
  font-size: 20rpx;
  color: #fff;
  height: 26rpx;
  line-height: 26rpx;
  padding: 0 5rpx;
  background-color: #ff7b33;
  border-radius: 13rpx;
  float: left;
  margin-top: 8rpx;
  margin-right: 5rpx;
}

.price-wrap {
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx 0 0;
}

.price-wrap .old {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  float: right;
  /* text-decoration: line-through; */
}

.specileSize {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 43, 68, 1);
}

.price-wrap .price {
  height: 48rpx;
  line-height: 48rpx;
  float: left;
  font-size: 30rpx;
  color: #f02510;
  font-weight: bold;
  text-align: left;
  min-width: 50%;
}

.noStock {
  font-size: 26rpx;
  color: #FF2B44;
  font-weight: bold;
  box-sizing: border-box;
  padding: 0 38rpx 20rpx 0;
}