/* components/navbar.wxss */
.navbar {
  width: 750rpx;
  /* height: 89rpx;
  line-height: 89rpx; */
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  text-align: center;
  background-color: rgba(0, 0, 0, 0);
  border-bottom: 2rpx solid #E8E6E6;
  z-index: 9;
}
.navbar .bg {
  width: 100%;
  height: 89rpx;
  background-color: #000;
  /* position: absolute;
  top: 0;
  left: 0; */
  z-index: -1;
}
.navbar .icon-back {
  padding: 28.5rpx 40rpx;
  width: 18rpx;
  height: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.navbar .page-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
  height: 89rpx;
  line-height: 89rpx;
  position: absolute;
  left: 0;
  right: 0;
}