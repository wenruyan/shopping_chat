/* components/login/login.wxss */
.confirm {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 9999;
    text-align: center;
}

.confirm .bg {
    width: 100%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: #000000;
    opacity: 0.5;
    z-index: -1;
}

.confirm .content {
    width: 580rpx;
    /* height: 531rpx; */
    background-color: #FFFFFF;
    border-radius: 25rpx;
    margin: 100rpx auto 128rpx;
    position: relative;
    color: #333333;
    text-align: center;
    overflow: hidden;
    padding-bottom: 24rpx;
}
.confirm .content .hb {
    width: 100%;
    height: 465rpx;
}
.confirm .content .text-title {
    font-size: 46rpx;
    padding-top: 66rpx;
    line-height: 1;
    font-weight: bold;
}

.confirm .content .text-content {
    font-size: 28rpx;
    padding: 55rpx 50rpx 0;
    font-size: 30rpx;
    color: #333333;
    text-align: left;
    font-weight: bold;
}
.confirm .content .btn-wrap {
    margin-top: 100rpx;
    padding: 0 45rpx;
    overflow: hidden;
}
.confirm .content .btn {
    width: 210rpx;
    height: 64rpx;
    line-height: 64rpx;
    color: #FFFFFF;
    font-size: 30rpx;
    /* box-shadow: 0 0 5rpx #FF7F44; */
    border-radius: 32rpx;
    background-color: #FF7F44;
    float: left;
    margin-right: 70rpx;
}
.confirm .content .btn:last-child {
    margin-right: 0;
    background-color: #FF654C;
}
.confirm .content .tips {
    font-size: 18rpx;
    color: #666666;
    margin-top: 40rpx;
}
.confirm .close image {
    width: 62rpx;
    height: 62rpx;
}